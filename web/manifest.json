{
    "manifest_version": 2,

    "name": "Tyckr",
    "description": "Grab posts of the current URL from Reddit using their API",
    "version": "1.0",

    "permissions": [
        "http://*/*",
        "https://*/*",
        "tabs"
    ],

    "background": {
        "scripts": ["js/background.js"]
    },

    "browser_action": {
        "default_icon": "icon.png"
    }
}